 "index": 6,
 "keepWaitingPipelines": false,
 "lastModifiedBy": "admin",
 "limitConcurrent": true,
 "name": "deploy-blue-ingress",
 "parameterConfig": [
  {
   "default": "${ trigger['parentExecution']['trigger']['parameters']['blue_release'] }",
   "description": "",
   "hasOptions": false,
   "label": "",
   "name": "release",
   "options": [],
   "pinned": false,
   "required": true
  },
  {
   "default": "nginx-svc",
   "description": "",
   "hasOptions": false,
   "label": "",
   "name": "service_name",
   "options": [
    {
     "value": ""
    }
   ],
   "pinned": false,
   "required": false
  }
 ],
 "spelEvaluator": "v4",
 "stages": [
  {
   "account": "default",
   "cloudProvider": "kubernetes",
   "manifestArtifact": {
    "artifactAccount": "opsmxdemo_account",
    "id": "9924f7cc-7079-4b85-91f3-1dc214ecb12d",
    "name": "kubedeploys/blue-ingress-deploy.yml",
    "reference": "https://api.github.com/repos/opsmx/sample-pipeline-manifest/contents/kubedeploys/blue-ingress-deploy.yml",
    "type": "github/file",
    "version": "main"
   },
   "manifests": [
    {
     "apiVersion": "apps/v1",
     "kind": "Deployment",
     "metadata": {
      "labels": {
       "release": "${parameters.release}"
      },
      "name": "nginx-deployment-${parameters.release}"
     },
     "spec": {
      "minReadySeconds": 5,
      "selector": {
       "matchLabels": {
        "app": "nginx",
        "release": "${parameters.release}"
       }
      },
      "template": {
       "metadata": {
        "labels": {
         "app": "nginx",
         "release": "${parameters.release}"
        }
       },
       "spec": {
        "containers": [
         {
          "image": "nginx:1.7.9",
          "name": "nginx",
          "ports": [
           {
            "containerPort": 80
           }
          ]
         }
        ]
       }
      }
     }
    },
    {
     "apiVersion": "v1",
     "kind": "Service",
     "metadata": {
      "labels": {
       "release": "${parameters.release}"
      },
      "name": "${parameters.service_name}-${parameters.release}",
      "namespace": "default"
     },
     "spec": {
      "ports": [
       {
        "port": 80,
        "protocol": "TCP",
        "targetPort": 80
       }
      ],
      "selector": {
       "app": "nginx",
       "release": "${parameters.release}"
      }
     }
    },
    {
     "apiVersion": "extensions/v1beta1",
     "kind": "Ingress",
     "metadata": {
      "annotations": {
       "kubernetes.io/ingress.class": "nginx"
      },
      "labels": {
       "app": "nginx",
       "release": "${parameters.release}"
      },
      "name": "nginx-ingress-${parameters.release}"
     },
     "spec": {
      "rules": [
       {
        "host": "app.domain.com",
        "http": {
         "paths": [
          {
           "backend": {
            "serviceName": "${parameters.service_name}-${parameters.release}",
            "servicePort": 80
           }
          }
         ]
        }
       }
      ]
     }
    }
   ],
   "moniker": {
    "app": "sampleapp"
   },
   "name": "Deploy Blue",
   "namespaceOverride": "default",
   "refId": "1",
   "requisiteStageRefIds": [],
   "skipExpressionEvaluation": false,
   "source": "artifact",
   "trafficManagement": {
    "enabled": false,
    "options": {
     "enableTraffic": false
    }
   },
   "type": "deployManifest"
  }
 ],
